{
    "go.useLanguageServer": true,
    "go.alternateTools": {
        "gopls": "gopls"
    },
    "go.languageServerExperimentalFeatures": {
        "diagnostics": true,
        "documentLink": true
    },
    "go.autocompleteUnimportedPackages": true,
    "[go]": {
        "editor.insertSpaces": true,
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        }
    }
}
