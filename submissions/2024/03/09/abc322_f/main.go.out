type info struct {
	size                      int
	left, right               int
	leftLen, rightLen, maxLen int
}

func calc(in *io.In, out *io.Out) {
	n, Q := in.NextInt2()
	s := in.NextBytes()

	st := ds.NewLazySegmentTree[info, int](
		func(a, b, ab *info) {
			ab.size = a.size + b.size
			ab.left = a.left
			ab.leftLen = a.leftLen
			ab.right = b.right
			ab.rightLen = b.rightLen
			ab.maxLen = max(a.maxLen, b.maxLen)

			// aとbを結合する
			if a.right == b.left {
				chmax(&ab.maxLen, a.rightLen+b.leftLen)

				// 全体が同じ場合
				if a.maxLen == a.size && b.maxLen == b.size {
					ab.leftLen = a.size + b.size
				} else if a.maxLen == a.size && b.maxLen != b.size {

				} else if a.maxLen != a.size && b.maxLen == b.size {

				}
			}
		},
	)
}

